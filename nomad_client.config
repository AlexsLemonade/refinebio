client {
  enabled = true

  reserved {
    # Our GitHub Actions boxes have 7 GB of RAM and need at least 4 to run Downloader Jobs.
    # 7 - 2 = 5 which leaves enough to run the jobs.
    memory = 2000
  }

  meta {
    volume_index = "0"
    is_smasher = "false"
  }
}

plugin "docker" {
  config {
    volumes {
      enabled      = true
    }
  }
}
